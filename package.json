{
  "name": "tailwind-boilerplate",
  "version": "1.0.0",
  "description": "Starter HTML CSS Tailwind CSS framework starter boilerplate",
  "main": "tailwind.config.js",
  "scripts": {
    "tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/css/style.css --watch",
    "minifyCss": "npx tailwindcss -i ./src/input.css -o ./dist/css/style.css --minify",
    "server": "lite-server -c bs-config.json",
    "prettier": "npx prettier --write **/*.html",
    "dev": "concurrently \"npm run tailwind\"  \"npm run server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahadovi/tailwind-boilerplate.git"
  },
  "keywords": [
    "HTML",
    "CSS",
    "Tailwind",
    "CSS Framework"
  ],
  "author": "Abdul Ahad Ovi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ahadovi/tailwind-boilerplate/issues"
  },
  "homepage": "https://github.com/ahadovi/tailwind-boilerplate#readme",
  "devDependencies": {
    "concurrently": "^7.4.0",
    "lite-server": "^2.6.1",
    "prettier-plugin-tailwindcss": "^0.1.13"
  }
}
